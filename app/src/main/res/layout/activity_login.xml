<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <include layout="@layout/login_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="65dp"
        android:src="@mipmap/logo" />

    <com.xw.repo.XEditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:inputType="phone"
        android:gravity="center_vertical"
        android:textColorHint="@color/text_9b9b9b"
        android:textColor="@color/text_010E2C"
        android:textSize="16sp"
        android:hint="请输入手机号"
        app:x_clearDrawable="@mipmap/login_delete"
        app:x_separator=" " />

    <View
        android:id="@+id/view_login1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_afcffc" />

    <com.xw.repo.XEditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入登录密码"
        android:drawablePadding="22dp"
        android:inputType="textPassword"
        android:textColor="@color/text_010E2C"
        android:textColorHint="@color/text_9b9b9b"
        android:textSize="16sp"
        app:x_clearDrawable="@mipmap/login_delete"
        app:x_hidePwdDrawable="@mipmap/eye_close"
        app:x_showPwdDrawable="@mipmap/eye_open" />

    <View
        android:id="@+id/view_login2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_f5" />
    <TextView
        android:id="@+id/tv_forget"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="忘记密码"
        android:textColor="@color/text_3788f8"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:enabled="true"
        android:background="@drawable/selector_login"
        android:gravity="center"
        android:text="立即登录"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="16dp">

        <CheckBox
            android:id="@+id/cb_login_proctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:button="@drawable/selector_ck_blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_login_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户服务协议"
            android:textColor="@color/text_3788f8"
            android:textSize="12sp" />

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        />
    <TextView
        android:id="@+id/tv_register"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户注册"
        android:textColor="@color/text_fe7437"
        android:textSize="16sp" />
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginBottom="9dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2017 haolyy.com. All Rights Reserved"
        android:textColor="#dcdcdc"
        android:textSize="10sp"
        />
</LinearLayout>